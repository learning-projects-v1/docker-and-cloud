# stage 1: build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
RUN npm run build -- --configuration production

# # stage 2: runtime
FROM nginx:alpine
COPY --from=build /app/dist/notification-router/browser /usr/share/nginx/html
RUN ls
COPY nginx/default.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]